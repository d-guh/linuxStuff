# ~/.sh_aliases
# Generic shell aliases

# Simple aliases
alias c="cd"
alias v="vim"
alias vi="vim"
alias nv="nvim"

# ls aliases
alias l="ls -CF"
alias la="ls -aF"
alias ll="ls -lF"
alias lla="ls -laF"
# alias lf="lf -single" # no IPC server (set autoquit in lfrc instead)

# Alert alias
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# Windows aliases
alias cls="clear"

# Funny aliases
alias sl="sl -e" # my sanity

# Git Multipull
gitmultipull() {
    eval "$(ssh-agent -s)"
    ssh-add -t 300 ~/.ssh/github
    find . -mindepth 1 -maxdepth 1 -type d -print -exec git -C {} pull \;
    ssh-add -d ~/.ssh/github
}

# Cat file with colors/escape chars
ccat() { echo -e "$(cat $1)"; }

ipinfo() { curl "https://ipinfo.io/$@"; }
