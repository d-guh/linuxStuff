# ~/.sh_aliases
# generic shell aliases

echo "> Sourcing '~/.sh_aliases'..."

# Simple Aliases
alias c="cd"
alias v="vim"
alias nv="nvim"

# Neovim cursor bruh
alias nvim='nvim; echo -ne "\e[5 q"'

# ls aliases
alias l="ls -CF"
alias la="ls -aF"
alias ll="ls -lF"
alias lla="ls -laF"

# Windows Aliases
alias cls="clear"

# Git Multipull
gitmultipull() {
    eval "$(ssh-agent -s)"
    ssh-add -t 300 ~/.ssh/github
    find . -mindepth 1 -maxdepth 1 -type d -print -exec git -C {} pull \;
    ssh-add -d ~/.ssh/github
}

# Cat file with colors/escape chars
ccat() { echo -e "$(cat $1)"; }

ipinfo() { curl "https://ipinfo.io/$@"; }

echo "< Sourced '~/.sh_aliases'."
