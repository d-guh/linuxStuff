# ~/.gitconfig
[user]
    #name = dguyserv # If you want to set a specific name per machine etc.
    email = ddcool535@gmail.com
    signingkey = ~/.ssh/githubsign.pub
[core]
    #autocrlf = true # Windows (CRLF -> LF on commit, LF -> CRLF on checkout)
    #autocrlf = input # Linux/Mac (CRLF -> LF on commit, LF on checkout)
    safecrlf = warn # Warns on conversion (Mixed ending files cannot be recreated)
[init]
    defaultBranch = main
[alias]
    co = checout
    ci = commit
    st = status
    br = branch
    sw = switch
    ps = push
    pl = pull
    pr = pull --rebase
    fe = fetch
    hist = log --pretty=format:'%C(yellow)[%ad]%C(reset) %C(green)[%h]%C(reset) | %C(red)%s %C(bold red){{%an}}%C(reset) %C(blue)%d%C(reset)' --graph --date=short
    lo = log --graph --pretty=oneline --abbrev-commit
    type = cat-file -t
    dump = cat-file -p
[gpg]
    format = ssh # gpg use ssh instead of gpg key for sign
[commit]
    gpgsign = true # Auto sign commits
[tag]
    gpgsign = true # Auto sign tags
