# /etc/nginx/sites-available/dguy.net
server {
    server_name dguy.net www.dguy.net;
    root /var/www/dguy.net;
    index index.html;
    autoindex off;

    # Error Pages
    error_page 400 /error/400.html;
    error_page 401 /error/401.html;
    error_page 403 /error/403.html;
    error_page 404 /error/404.html;
    error_page 405 /error/405.html;
    error_page 500 /error/500.html;

    location /error/ {
        internal;
    }

    # Security headers
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header Content-Security-Policy "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self'; object-src 'none';";
    add_header Referrer-Policy "strict-origin-when-cross-origin";

    # Block crawlers
    location /robots.txt {
        add_header X-Robots-Tag "noindex, nofollow, nosnippet, noarchive, notranslate, noimageindex";
    }

    # Block Scripts Globally
    location ~* \.(php|sh|pl|cgi|py|rb|exe|bat)$ {
        deny all;
        return 403;
        error_log /var/log/nginx/denied.log warn;
    }

    # Allow only GET and HEAD requests
    location / {
        try_files $uri $uri/ =404;
        limit_except GET HEAD {
            deny all;
        }
    }

    # Static Files
    location /static/ {
        # Caching
        location ~* \.(jpg|jpeg|png|gif|ico|css|woff|woff2|ttf|svg)$ {
            expires 7d;
            add_header Cache-Control "public, max-age=604800, immutable";
        }
    }

    # Block git access, if I ever end up tracking site on git
    location ~ /\.git {
        deny all;
        return 403;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/dguy.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/dguy.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    # Logging
    error_log logs/error.log error;
    access_log /var/log/nginx/access.log combined;
}

server {
    listen 80;
    server_name dguy.net www.dguy.net 99.96.122.118 99-96-122-118.lightspeed.gnvlsc.sbcglobal.net;
    return 301 https://dguy.net;
}
